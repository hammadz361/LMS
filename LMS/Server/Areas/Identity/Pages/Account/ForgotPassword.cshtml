@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<head>
    <style>
        .divider:after,
        .divider:before {
          content: "";
          flex: 1;
          height: 1px;
          background: #eee;
        }
        .h-custom {
          height: calc(100% - 73px);
        }
        body{
            width: 100%;
            height: 100%;
        }
    </style>
</head>

<section class="vh-100">
  <div class="container-fluid h-custom my-auto align-items-center d-flex">
    <div class="row d-flex justify-content-center align-items-center shadow-lg p-4" style="border-radius: 20px !important;">
        <p class="text-center h1 fw-bold mx-2">@ViewData["Title"]</p>
      <div class="col-md-8 col-lg-5 col-xl-5" style="height: 450px;">
        <img asp-append-version="true" src="~/template/images/lms-logo.png" class="img-fluid" style="margin-top: 50px !important;"
          alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-7 col-xl-4 offset-xl-1" style="height: 450px;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start my-5">
                <span class="btn btn-primary btn-floating mx-1">
                  <i class="fab fa-facebook-f"></i>
                </span>
                <span class="btn btn-primary btn-floating mx-1">
                  <i class="fab fa-twitter"></i>
                </span>
                <span class="btn btn-primary btn-floating mx-1">
                  <i class="fab fa-linkedin-in"></i>
                </span>
            </div>
            <div class="divider d-flex align-items-center my-4">
                <p class="text-center fw-bold mx-3 mb-0"></p>
            </div>
          <div class="form-outline mb-4">
              <label asp-for="Input.Email" class="form-label">Email address</label>
              <input asp-for="Input.Email" type="email" class="form-control form-control-lg" placeholder="Enter a valid email address" />
              <span asp-validation-for="Input.Email" class="text-danger"></span>
          </div>
          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Reset Password</button>
            <p class="small fw-bold mt-4 pt-1 mb-0">Go back to Login <a asp-page="./Login"
                class="link-danger">Login</a></p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
