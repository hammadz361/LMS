@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <style>
        .divider:after,
        .divider:before {
          content: "";
          flex: 1;
          height: 1px;
          background: #eee;
        }
        .h-custom {
          height: calc(100% - 73px);
        }
        body{
            width: 100%;
            height: 100%;
        }
    </style>
</head>

<section class="vh-100">
  <div class="container-fluid h-custom my-auto align-items-center d-flex">
    <div class="row d-flex justify-content-center align-items-center shadow-lg p-4" style="border-radius: 20px !important;">
      <div class="col-md-8 col-lg-5 col-xl-5" style="height: 550px;">
        <img asp-append-version="true" src="~/template/images/lms-logo.png" class="img-fluid" style="margin-top: 70px !important;"
          alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-7 col-xl-4 offset-xl-1" style="height: 550px;">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                <p class="text-center h1 fw-bold mx-2">Sign Up</p>
                <span class="btn btn-primary btn-floating mx-1">
                </span>
                <span class="btn btn-primary btn-floating mx-1">
                  <i class="fab fa-twitter"></i>
                </span>
                <span class="btn btn-primary btn-floating mx-1">
                  <i class="fab fa-linkedin-in"></i>
                </span>
            </div>
            <div class="divider d-flex align-items-center my-4">
                <p class="text-center fw-bold mx-3 mb-0"></p>
            </div>
            <div class="form-outline mb-2">
                <label asp-for="Input.Email" class="form-label">Email address</label>
                <input asp-for="Input.Email" type="email" class="form-control form-control-lg" placeholder="Enter a valid email address" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-outline mb-2">
                <label class="form-label" asp-for="Input.DistrictId">Select District</label>
                <select class="form-select form-select-lg form-text" aria-label="Default select example" asp-for="Input.DistrictId" asp-items="ViewBag.District">
                    <option selected>Open this select menu</option>
                </select>
                <span asp-validation-for="Input.DistrictId" class="text-danger"></span>
            </div>
            <div class="form-outline mb-2">
                <label class="form-label" asp-for="Input.SchoolId">Select School</label>
                <select class="form-select form-select-lg form-text" aria-label="Default select example" asp-for="Input.SchoolId" asp-items="ViewBag.School">
                    <option selected>Open this select menu</option>
                </select>
                <span asp-validation-for="Input.SchoolId" class="text-danger"></span>
            </div>
            <div class="text-center text-lg-start mt-4 pt-2">
                <button type="submit" 
                        class="btn btn-primary btn-lg"
                        style="padding-left: 2.5rem; padding-right: 2.5rem;"
                >Login</button>
                <p class="small fw-bold mt-4 pt-1 mb-0">Already have an account? 
                    <a asp-page="./Login" class="link-danger">Login</a>
                </p>
            </div>
        </form>
      </div>
    </div>
  </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
